{{!
    @template core_message/message_drawer_view_settings_body_content_notification_preferences

    This template will render the notification perferences for the message settings..

    Classes required for JS:
    * none

    Data attributes required for JS:
    * All data attributes are required

    Context variables required for this template:
    * userid The logged in user id
    * urls The URLs for the popover

    Example context (json):
    {}

}}

<div data-preference="notifications" class="d-flex flex-column">
    {{#processors}}
         <span class="switch custom-controls-stacked">
            <label class="custom-control ios-switch d-inline-flex align-items-center {{#locked}}disabled{{/locked}}">
                <input type="checkbox"
                    id="{{name}}-{{uniqid}}"
                    data-name="{{name}}"
                    class="ios-switch-control-input" 
                    {{#checked}}checked{{/checked}}
                    {{#locked}}disabled{{/locked}}
                >
                <span class="ios-switch-control-indicator"></span>
                <label class="my-0" for="{{name}}-{{uniqid}}">{{displayname}}{{#locked}} ({{lockedmessage}}){{/locked}}</label>
            </label>
        </span>
    {{/processors}}
</div>
