<label class="my-2 d-inline-flex custom-control ios-switch form-check-inline {{#error}}has-danger{{/error}} fitem {{#advanced}}advanced{{/advanced}} {{{element.extraclasses}}}">
{{^element.hardfrozen}}
    {{^element.frozen}}
        <input type="hidden" name="{{element.name}}" value="{{element.deselectedvalue}}">
    {{/element.frozen}}
    {{#element.frozen}}
        <input type="hidden" name="{{element.name}}" value="{{element.frozenvalue}}">
    {{/element.frozen}}
{{/element.hardfrozen}}
<input type="checkbox" name="{{element.name}}" class="ios-switch-control-input form-check-input {{element.extraclasses}}"
    id="{{element.id}}"
    {{#element.selectedvalue}}
        value="{{element.selectedvalue}}"
    {{/element.selectedvalue}}
    {{#element.checked}}checked{{/element.checked}}
    size="{{element.size}}"
    {{#error}}
        autofocus aria-describedby="{{element.iderror}}"
    {{/error}}
    {{#element.frozen}}
        disabled
    {{/element.frozen}}
    {{{element.attributes}}} >

    <span class="ios-switch-control-indicator"></span>

    <span>{{{label}}}</span>
</label>
{{#text}}
    <em>{{{.}}}</em>
{{/text}}
{{{helpbutton}}}
{{#error}}
<span class="form-control-feedback invalid-feedback" id="{{element.iderror}}" {{#error}} style="display: block;"{{/error}}>
    {{{error}}}
</span>
{{/error}}
{{^element.frozen}}
{{#js}}
require(['theme_space/form-display-errors'], function(module) {
    module.enhance({{#quote}}{{element.id}}{{/quote}});
});
{{/js}}
{{/element.frozen}}
