{{!
    @template course_course/coursecard

    This template renders the a card for the course cards.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "hasprogress": true,
                "progress": 10
            }
        ]
    }
}}
<div class="card dashboard-card" role="listitem"
    data-region="course-content"
    data-course-id="{{{id}}}">

    <div class="c-course-box">
      <div class="c-course-content">
        <a href="{{viewurl}}" tabindex="-1">
            <div class="card-img dashboard-card-img" style='background-image: url("{{{courseimage}}}");'>
                <span class="sr-only">{{#str}}aria:courseimage, core_course{{/str}}</span>
            </div>
        </a>
        <div class="course-info-container" id="course-info-container-{{id}}-{{uniqid}}">
        {{^visible}}<div class="d-block"><span class="tag tag-danger mt-3 mb-1">{{#str}} hiddenfromstudents {{/str}}</span></div>{{/visible}}
            <div class="d-flex align-items-start">
                <div class="w-100">
                    <div class="text-muted muted d-flex w-100 my-1 flex-wrap small">
                        {{$coursecategory}}
                            {{#showcoursecategory}}
                                <span class="course-categoryname d-inline-flex align-items-center">
                                    <i class="icon fas fa-graduation-cap"></i>
                                    {{#coursecategory}}
                                        {{{coursecategory}}}
                                    {{/coursecategory}}
                                </span>
                            {{/showcoursecategory}}
                        {{/coursecategory}}
                        {{#showshortname}}
                        <div class="w-100 course-shortname">
                            <span class="sr-only">
                                {{#str}}aria:courseshortname, core_course{{/str}}
                            </span>
                            {{{shortname}}}
                        </div>
                        {{/showshortname}}
                    </div>
                    <a href="{{viewurl}}" class="coursename {{#showcoursecategory}}mt-1{{/showcoursecategory}} {{^showcoursecategory}}mt-3{{/showcoursecategory}} mb-0">
                        {{> core_course/favouriteicon }}
                        <span class="sr-only">
                                {{#str}}aria:coursename, core_course{{/str}}
                            </span>
                            {{$coursename}}{{/coursename}}
                    </a>
                </div>
                {{$menu}}{{/menu}}
            </div>
        </div>
        {{$progress}}{{/progress}}
      </div>
    </div>

</div>
