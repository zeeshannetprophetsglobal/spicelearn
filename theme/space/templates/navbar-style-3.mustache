{{!
    Page navbar.
}}

  <div id="topBar3" class="s-top s-top--sidebar justify-content-center {{#ShowTopBarUserName}}showusername{{/ShowTopBarUserName}} {{#customtopnavhtml}}topbar-customtopnav{{/customtopnavhtml}} {{#TopBarText}}topbar-text{{/TopBarText}} {{^TopBarText}}topbar-withouttext{{/TopBarText}} {{#output.render_lang_menu}}topbar-lang{{/output.render_lang_menu}}">

    {{> theme_space/navbar-mobile }}

    <div class="s-top-container">
      <div id="navBar" class="c-container row no-gutters justify-content-start align-items-center">

        {{> theme_space/navbar-btn }}
        {{#output.render_lang_menu}}<div class="c-lang-menu mr-md-0">{{{ output.render_lang_menu }}}</div>{{/output.render_lang_menu}}
        {{#ShowCustomNav}}<div class="c-custom-nav-container ml-md-0 ml-md-2">{{> theme_space/custom-nav }}</div>{{/ShowCustomNav}}

        {{#customtopnavhtml}}
        <div class="col-lg-auto s-custom-main-nav text-md-left mx-sm-0 mx-lg-4 p-0">
          <div class="c-custom-main-nav">
            {{{customtopnavhtml}}}
          </div>
        </div>
        {{/customtopnavhtml}}

        <div class="c-nav-user nav ml-md-auto align-items-center justify-content-sm-end justify-content-lg-center">

            {{#TopBarText}}<div class="c-top-text c-menu-sep p-md-0 mr-md-3 pr-md-3 text-sm-center text-lg-left">{{{TopBarText}}}</div>{{/TopBarText}}

            <div class="search-box d-block">
            {{{ output.search_box }}}
            </div>

            <!-- navbar_plugin_output -->
            <div class="top-icons-nav c-menu-sep mr-md-3">{{{ output.navbar_plugin_output }}}</div>

            <!-- user_menu -->
            <div class="c-user-menu">
                {{{ output.user_menu }}}
            </div>

        </div>
        <!-- search_box -->
      </div>
    </div>

  </div>
